<?xml version="1.0" encoding="utf-8"?>





<LinearLayout
    android:id="@+id/parent0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:background="@color/white">
    <ImageView
        android:id="@+id/runderseeimageview"
        android:background="@color/black"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/rundersee"
        android:scaleType="centerCrop"
        android:visibility="visible">
    </ImageView>
    <RelativeLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <ImageButton
        android:onClick="klicksoundbutton"
        android:id="@+id/soundimageButton"
        android:layout_margin="16dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/sound"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
    </ImageButton>
        <ImageButton
            android:onClick="next1"
            android:id="@+id/next1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/nextbutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp">
        </ImageButton>
        <ImageButton
            android:onClick="zurÃ¼ck1"
            android:id="@+id/back1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backbutton"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/next1"
            android:layout_margin="8dp">
        </ImageButton>
        <LinearLayout
            android:id="@+id/fragelayout"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/parent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <CheckBox
                android:id="@+id/check1"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#D7CCC8"
                android:checked="false"
                android:layout_centerVertical="true"
                />

                <ImageView
                    android:animateLayoutChanges="true"
                    android:id="@+id/formel1"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/check1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/formel4"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/parent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <CheckBox
                    android:id="@+id/check2"
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#D7CCC8"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/formel2"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/check2"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/formel1"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/parent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <CheckBox
                    android:id="@+id/check3"
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#D7CCC8"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/formel3"
                    android:layout_toRightOf="@id/check3"
                    android:layout_centerInParent="true"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/formel3"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent4"
                >

                <CheckBox
                    android:id="@+id/check4"
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#D7CCC8"
                    android:checked="false"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/formel4"
                    android:layout_toRightOf="@id/check4"
                    android:layout_centerInParent="true"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/formel2"></ImageView>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
